
<div class="user_wrapper">
	
	<div class="userpage_header">
		<div class="userpage_gravatar">
			<%= image_tag avatar_url(@user) %>
		</div>

		<div class="userpage_name">
			<h1><%= @user.username %> <% if @user.show_name || is_admin? %><span class="userpage_realname">(<%= @user.first_name + ' ' + @user.last_name %>)</span><% end %></h1>
		</div>

		<% if @user == current_user || is_admin? %>
			<%= user_navigation_bar %>
		<% end %>
	</div>
	<hr />

	<% if @user.admin %>
		<strong>Administrator</strong><br />
	<% end %>
	<% if is_admin? %>
		<strong>Userid:</strong> <%= @user.userid %><br />
	<% end %>
	<strong>Real Name:</strong> <% if @user.show_name || is_admin? %><%= @user.first_name + " " + @user.last_name %><% else %>hidden<% end %><br />
	<strong>Email:</strong> <% if @user.show_email || is_admin? %><%= @user.email %><% else %>hidden<% end %><br />
	<strong>Member Since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %><br /><br />

	<strong>News Post Count:</strong> <%= @user.newsposts.count %><br />
	<strong>Thread Count:</strong> <%= @user.topics.count %><br />
	<strong>Forum Post Count:</strong> <%= @user.forumposts.count %><br />

	<!-- <% if @user.birthday %>
	<strong>Birthday:</strong> <%= @user.birthday.strftime("%B %d") %><% if @user.show_year %><%= @user.birthday.strftime(", %Y") %><% end %><br />
	<% end %> -->
	<br />

	<strong>Bio:</strong> <%= @user.bio %><br /><br />
	<strong>Signature:</strong><br />
	<%= safer_content(@user.signature).html_safe %>

</div>
