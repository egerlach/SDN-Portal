<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
	<%= f.label :category_id %><br />
	<% if @category %>
		<%= f.select(:category_id, Category.all.collect {|p| [ p.name, p.id ] }, :selected => @category.id) %>
	<% else %>
		<%= f.select(:category_id, Category.all.collect {|p| [ p.name, p.id ] }) %>
	<% end %>
  </div>
  
  <div class="field">
	<%= label(:forumpost, :content) %><br />
	<%= text_area(:forumpost, :content, :class => "post_content_field") %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
